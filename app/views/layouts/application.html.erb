<!DOCTYPE html>
<html>
  <head>
    <title>CreateTown</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <header>
          <%= link_to 'CreateTown', root_path, class: "logo" %>
          <nav>
            <ul class="">
              <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
              <li><%= link_to '商品一覧', posts_path %></li>
              <li><%= link_to '投稿する', new_post_path %></li>
              <li><%= link_to 'ログアウト', users_sign_out_path, method: :delete %></li>
            </ul>
          </nav>
      </header>
    <% else %>
      <header>
          <%= link_to 'CreateTown', root_path, class: "logo" %>
          <nav>
          <ul class="">
            <li><%= link_to 'トップ', root_path %></li>
            <li><%= link_to '新規登録', users_sign_up_path %></li>
            <li><%= link_to 'ログイン', users_sign_in_path %></li>
          </ul>
        </nav>
      </header>
    <% end %>




    <main>
      <%= yield %>
    </main>
  </body>
</html>
