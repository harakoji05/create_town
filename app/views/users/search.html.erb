<div class="container main">
	<div class="row">
		<div class="col col-sm-2">
			<%= render 'layouts/search-form' %>
		</div>
		<div class="col col-sm-10">
			<h4><span class="under">検索結果</span></h4>
			<% if @users.present? %>
				<%= render 'user-list', users: @users %>
			<% else %>
				<p>検索結果がありません。</p>
			<% end %>
		</div>
		<div  class="row">
			<span><%= paginate @users %></span>
		</div>
	</div>
</div>