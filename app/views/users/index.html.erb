<div class="user_index">
	<div class="">
		<h3><span class="under">ユーザー一覧</span></h3>
	</div>
	<div class="">
		<% @users.each do |user| %>
			<div class="user_index_item">
				<div class="user_index_item_image">
					<%= link_to user_path(user) do %>
						<%= attachment_image_tag user, :profile_image,format: 'jpeg', fallback: "no_image.jpg" ,  size: "50x50", class: "user_index_item_image"%>
					<% end %>
				</div>
				<div class="user_index_box">
					<div class="user_index_item_name">
						<%= link_to user_path(user) do %>
							<%= user.last_name + user.first_name %>
						<% end %>
					</div>
					<% if user.interest.present? %>
						<div class="">
							<span>やりたいこと：<%= user.interest %></span>
						</div>
					<% end %>
					<% if user.user_status.present? %>
						<div class="user_index_status">
							<span>ステータス:<%= user.user_status %></span>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
	<div  class="user-pagenate">
		<%= paginate @users %>
	</div>
</div>