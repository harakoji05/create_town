<div class="container main">
  <div class="row">
    <div class="log-in">
      <div class="list-title">
        <p>ログイン</p>
      </div>

      <div class="login-error row">
        <%= flash[:error] %>
      </div>

      <%= form_for(resource, as: resource_name, url: users_sign_in_path) do |f| %>

      <div class="">
        <table class="log-in__table">
          <tbody>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
            </tr>
            <tr>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40x10" %>
              </td>
            </tr>
            <tr>
              <td>
                <%= f.label :password, "パスワード" %></td>
            </tr>
            <tr>
              <td><%= f.password_field :password, autocomplete: "current-password", :size=>"40x10" %></td>
            </tr>
            <tr>
              <td>
              <%= f.submit "ログイン", class:"btn btn-primary" %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <% end %>

      <h4>登録がお済みでない方</h4>
      <p><%= link_to "こちら", users_sign_up_path, class: "underline" %>から新規登録を行なってください。</p>

    </div>
  </div>
</div>
