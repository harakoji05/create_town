<% post.comments.each do |comment| %>
  <table class="table">
    <tbody>
      <td>
        <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image,format: 'jpeg', fallback: "no_image.jpg" ,  size: "40x40", class:"profile-image"%>
        <% end %>
      </td>
      <td>
        <%= comment.user.last_name %>さん
      </td>
      <td>
        <%= simple_format(comment.content) %>
      </td>
      <% if comment.user == current_user%>
        <td align="right">
          <%= link_to "削除", post_comment_path(@post, comment), method: :delete , class:"btn btn-danger", remote: true%>
        </td>
      <% end %>
    </tbody>
  </table>
<% end %>