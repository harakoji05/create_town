<div class="container main">
	<div class="row" >
		<div class="col col-sm-2">
			<%= render "post-search" %>
			<div class="row">
				<p><span class="under">いいねランキングtop3</span></p>
				<% @all_ranks.each do |post| %>
					<div class="posts-index__ranking">
						<%= link_to post_path(post) do %>
							<p ><li><%= post.title %></li></p>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
		<div class="col col-sm-10">
			<div class="row">
				<h4><span class="under">投稿一覧</span></h4>
				<%= render 'index', posts: @posts %>
			</div>
			<div  class="row">
			<%= paginate @posts %>
			</div>
		</div>
	</div>
</div>