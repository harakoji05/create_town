<div class="">
	<%= render 'layouts/error_messages', model: post %>
</div>
<%= form_with(model: post, local: true) do |f| %>
<div class="">
<%= attachment_image_tag post, :image,format: 'jpeg', fallback: "Noimage.png" ,  size: "250x150"%>
</div>
<div class="">
	<%= f.attachment_field :image,class:"file-select" %>
</div>
<div class="">
	<p>タイトル</p>
	<%= f.text_field :title, :size=>"40x10", placeholder: "タイトルを入力してください。" %>
</div>
<div class="">
	<h5>本文</h5>
	<%= f.text_area :body, placeholder: "本文を入力してください。" %>
</div>
<div class="">
	<h5>活動場所住所</h5>
	<%= f.text_field :address,:size=>"40x10", placeholder: "例：大阪府〇〇市1-2-3" %>
</div>
<div class="">
	<%= f.submit "投稿する" %>
</div>
<% end %>